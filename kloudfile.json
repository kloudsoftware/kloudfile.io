{
  "kind": "List",
  "apiVersion": "v1",
  "metadata": {},
  "items": [
    {
      "kind": "PersistentVolumeClaim",
      "apiVersion": "v1",
      "metadata": {
        "name": "mysql-pv-claim",
        "creationTimestamp": null,
        "annotations": {
          "volume.beta.kubernetes.io/storage-class": "nfs-client"
        }
      },
      "spec": {
        "accessModes": [
          "ReadWriteOnce"
        ],
        "resources": {
          "requests": {
            "storage": "10Gi"
          }
        },
        "storageClassName": "manual",
        "volumeMode": "Filesystem"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Namespace",
      "metadata": {
        "name": "kloudfile"
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "mysql",
        "namespace": "kloudfile"
      },
      "spec": {
        "ports": [
          {
            "protocol": "TCP",
            "port": 3306,
            "targetPort": 3306
          }
        ],
        "selector": {
          "app": "mysql"
        },
        "clusterIP": "None",
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "kind": "Deployment",
      "apiVersion": "apps/v1",
      "metadata": {
        "name": "mysql",
        "namespace": "kloudfile"
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "matchLabels": {
            "app": "mysql"
          }
        },
        "template": {
          "metadata": {
            "labels": {
              "app": "mysql"
            }
          },
          "spec": {
            "volumes": [
              {
                "name": "mysql-persistent-storage",
                "persistentVolumeClaim": {
                  "claimName": "mysql-pv-claim"
                }
              }
            ],
            "containers": [
              {
                "name": "mysql",
                "image": "mysql:5.6",
                "ports": [
                  {
                    "name": "mysql",
                    "containerPort": 3306,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "MYSQL_ROOT_PASSWORD",
                    "value": "kloudfile"
                  },
                  {
                    "name": "MYSQL_DATABASE",
                    "value": "push"
                  }
                ],
                "volumeMounts": [
                  {
                    "name": "mysql-persistent-storage",
                    "mountPath": "/var/lib/mysql"
                  }
                ],
                "terminationMessagePath": "/dev/termination-log",
                "terminationMessagePolicy": "File",
                "imagePullPolicy": "IfNotPresent"
              }
            ],
            "restartPolicy": "Always",
            "terminationGracePeriodSeconds": 30,
            "dnsPolicy": "ClusterFirst",
            "securityContext": {},
            "schedulerName": "default-scheduler"
          }
        },
        "strategy": {
          "type": "Recreate"
        },
        "revisionHistoryLimit": 10,
        "progressDeadlineSeconds": 600
      },
      "status": {}
    },
    {
      "kind": "PersistentVolumeClaim",
      "apiVersion": "v1",
      "metadata": {
        "name": "kloudfile-pv-claim",
        "creationTimestamp": null,
        "annotations": {
          "volume.beta.kubernetes.io/storage-class": "nfs-client"
        }
      },
      "spec": {
        "accessModes": [
          "ReadWriteOnce"
        ],
        "resources": {
          "requests": {
            "storage": "20Gi"
          }
        },
        "storageClassName": "manual",
        "volumeMode": "Filesystem"
      }
    },
    {
      "kind": "Deployment",
      "apiVersion": "apps/v1",
      "metadata": {
        "name": "kloudfile",
        "namespace": "kloudfile"
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "matchLabels": {
            "app": "kloudfile"
          }
        },
        "template": {
          "metadata": {
            "labels": {
              "app": "kloudfile"
            }
          },
          "spec": {
            "volumes": [
              {
                "name": "kloudfile-persistent-storage",
                "persistentVolumeClaim": {
                  "claimName": "kloudfile-pv-claim"
                }
              }
            ],
            "containers": [
              {
                "name": "kloudfile-c",
                "image": "registry.kloudfile.io/kloudfile/kloudfile:latest",
                "ports": [
                  {
                    "name": "kloudfile",
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "volumeMounts": [
                  {
                    "name": "kloudfile-persistent-storage",
                    "mountPath": "/var/kloudfile"
                  }
                ],
                "terminationMessagePath": "/dev/termination-log",
                "terminationMessagePolicy": "File",
                "imagePullPolicy": "IfNotPresent"
              }
            ],
            "restartPolicy": "Always",
            "terminationGracePeriodSeconds": 30,
            "dnsPolicy": "ClusterFirst",
            "securityContext": {},
            "schedulerName": "default-scheduler"
          }
        },
        "strategy": {
          "type": "Recreate"
        },
        "revisionHistoryLimit": 10,
        "progressDeadlineSeconds": 600
      },
      "status": {}
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "kloudfile",
        "namespace": "kloudfile"
      },
      "spec": {
        "ports": [
          {
            "protocol": "TCP",
            "port": 8080,
            "targetPort": 8080,
            "name": "web"
          }
        ],
        "selector": {
          "app": "kloudfile"
        }
      }
    },
    {
      "kind": "Ingress",
      "apiVersion": "extensions/v1beta1",
      "metadata": {
        "name": "kloudfile-ingress",
        "namespace": "kloudfile",
        "creationTimestamp": null
      },
      "spec": {
        "rules": [
          {
            "host": "kloudfile.io",
            "http": {
              "paths": [
                {
                  "path": "/",
                  "backend": {
                    "serviceName": "kloudfile",
                    "servicePort": "web"
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
